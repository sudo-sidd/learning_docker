<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">{{name}}</h1>
                <h2 class="h3 text-muted mb-4">{{title}}</h2>
                <p class="lead mb-4">{{bio}}</p>
                <div class="d-flex gap-3">
                    <a href="/gallery" class="btn btn-coffee btn-lg">
                        <i class="fas fa-images"></i> View Gallery
                    </a>
                    <a href="/contact" class="btn btn-outline-coffee btn-lg">
                        <i class="fas fa-envelope"></i> Contact Me
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="coffee-cup">
                        <i class="fas fa-coffee"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Skills & Expertise</h2>
        <div class="row">
            {{#each skills}}
            <div class="col-md-4 mb-3">
                <div class="skill-card">
                    <i class="fas fa-coffee text-coffee"></i>
                    <h5>{{this}}</h5>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<!-- Experience Preview -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Recent Experience</h2>
        <div class="row">
            {{#each experience}}
            {{#if @first}}
            <div class="col-lg-8 mx-auto">
                <div class="experience-card">
                    <h4>{{title}}</h4>
                    <h6 class="text-coffee">{{company}}</h6>
                    <p class="text-muted">{{period}}</p>
                    <p>{{description}}</p>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
        <div class="text-center mt-4">
            <a href="/about" class="btn btn-outline-coffee">View Full Experience</a>
        </div>
    </div>
</section>
