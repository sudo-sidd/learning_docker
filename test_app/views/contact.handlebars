<section class="py-5 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h1 class="display-4 text-center mb-5">Contact {{name}}</h1>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="contact-info">
                            <h3>Get In Touch</h3>
                            <p class="lead">Ready to discuss your next coffee project or just want to chat about coffee?</p>
                            
                            <div class="contact-item">
                                <i class="fas fa-envelope text-coffee"></i>
                                <div>
                                    <strong>Email</strong>
                                    <p>{{contact.email}}</p>
                                </div>
                            </div>
                            
                            <div class="contact-item">
                                <i class="fas fa-phone text-coffee"></i>
                                <div>
                                    <strong>Phone</strong>
                                    <p>{{contact.phone}}</p>
                                </div>
                            </div>
                            
                            <div class="contact-item">
                                <i class="fas fa-location-dot text-coffee"></i>
                                <div>
                                    <strong>Location</strong>
                                    <p>{{contact.location}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="contact-form">
                            <h3>Send a Message</h3>
                            <form>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Subject</label>
                                    <input type="text" class="form-control" id="subject" required>
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" rows="5" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-coffee w-100">
                                    <i class="fas fa-paper-plane"></i> Send Message
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
